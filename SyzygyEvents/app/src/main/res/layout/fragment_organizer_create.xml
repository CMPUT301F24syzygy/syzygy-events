<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="?attr/actionBarSize">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:expandedHintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/event_create_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="top|start"
                android:hint="Event Title*"
                android:inputType="text|textMultiLine"
                android:lines="1"
                android:maxLength="20"
                android:scrollbars="vertical"
                android:textAlignment="gravity"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/event_img_card_view"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_1">
            <ImageView
                android:id="@+id/event_create_profile"
                android:layout_width="160dp"
                android:layout_height="160dp"/>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/event_create_editImage"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/add_image_button"
            app:layout_constraintTop_toBottomOf="@+id/event_img_card_view"
            app:layout_constraintStart_toStartOf="@+id/event_img_card_view"
            app:layout_constraintEnd_toEndOf="@+id/event_img_card_view"/>

        <Button
            android:id="@+id/event_create_removeImage"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/remove_image_button"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/event_create_editImage"
            app:layout_constraintStart_toStartOf="@+id/event_img_card_view"
            app:layout_constraintEnd_toEndOf="@+id/event_img_card_view"/>


        <CheckBox
            android:id="@+id/event_create_requireGeo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Require Geolocation"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_create_editImage" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:expandedHintEnabled="false"
            app:layout_constraintStart_toEndOf="@+id/event_img_card_view"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/event_create_price"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="top|start"
                android:hint="Price*"
                android:inputType="numberDecimal"
                android:lines="1"
                android:maxLength="9"
                android:textAlignment="gravity"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:expandedHintEnabled="false"
            app:layout_constraintStart_toEndOf="@+id/event_img_card_view"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_2">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/event_create_capacity"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="top|start"
                android:hint="Capacity*"
                android:inputType="number"
                android:lines="1"
                android:maxLength="9"
                android:textAlignment="gravity"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_4"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:expandedHintEnabled="false"
            app:layout_constraintStart_toEndOf="@+id/event_img_card_view"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_3">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/waitlist_limit"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="top|start"
                android:hint="Waitlist Cap"
                android:inputType="number"
                android:lines="1"
                android:maxLength="9"
                android:textAlignment="gravity"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>







        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_5"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:placeholderText="dd/mm/yyyy"
            app:expandedHintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_create_requireGeo">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/event_create_open_date"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="top|start"
                android:hint="Open Waitlist*"
                android:inputType="date"
                android:lines="1"
                android:maxLength="9"
                android:textAlignment="gravity"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_6"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:placeholderText="dd/mm/yyyy"
            app:expandedHintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_create_requireGeo">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/event_create_close_date"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="top|start"
                android:hint="Close Waitlist*"
                android:inputType="date"
                android:lines="1"
                android:maxLength="9"
                android:textAlignment="gravity"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <View
            android:id="@+id/div1"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_5" />


        <com.google.android.material.chip.ChipGroup
            android:id="@+id/event_create_chips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/div1"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/create_event_single"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:layout_margin="8dp"
                android:textAlignment="center"
                android:checked="true"
                android:text="Single Event" />

            <com.google.android.material.chip.Chip
                android:id="@+id/create_event_sequence"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:checkable="true"
                android:text="Event Sequence"
                android:textAlignment="center" />

        </com.google.android.material.chip.ChipGroup>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_7"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:placeholderText="dd/mm/yyyy"
            app:expandedHintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_create_chips">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/event_create_start_date"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="top|start"
                android:hint="Start Date*"
                android:inputType="date"
                android:lines="1"
                android:maxLength="9"
                android:textAlignment="gravity"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_50"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:placeholderText="dd/mm/yyyy"
            app:expandedHintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_create_chips">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/event_create_date"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="top|start"
                android:hint="Date*"
                android:inputType="date"
                android:lines="1"
                android:maxLength="9"
                android:textAlignment="gravity"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_8"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:expandedHintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_create_chips"
            app:placeholderText="dd/mm/yyyy">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/event_create_end_date"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="top|start"
                android:hint="End Date*"
                android:inputType="date"
                android:lines="1"
                android:maxLength="9"
                android:textAlignment="gravity"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.chip.ChipGroup
            android:id="@+id/create_event_days_cnt"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_7"
            tools:layout_editor_absoluteY="664dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/create_event_days_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="M" />

            <com.google.android.material.chip.Chip
                android:id="@+id/create_event_days_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="T" />

            <com.google.android.material.chip.Chip
                android:id="@+id/create_event_days_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="W" />

            <com.google.android.material.chip.Chip
                android:id="@+id/create_event_days_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="T" />

            <com.google.android.material.chip.Chip
                android:id="@+id/create_event_days_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="F" />

            <com.google.android.material.chip.Chip
                android:id="@+id/create_event_days_sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="S" />

            <com.google.android.material.chip.Chip
                android:id="@+id/create_event_days_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="S" />
        </com.google.android.material.chip.ChipGroup>



























        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_d"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Event Description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_event_days_cnt"
            app:expandedHintEnabled="false">
            <com.google.android.material.textfield.TextInputEditText
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/event_create_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textLongMessage|textAutoCorrect|textCapSentences|textMultiLine"
                android:lines="5"
                android:textAlignment="gravity"
                android:gravity="top|start"
                android:maxLength="300"
                android:scrollbars="vertical" />
        </com.google.android.material.textfield.TextInputLayout>




        <Button
            android:id="@+id/event_create_button_submit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Create Event"
            app:layout_constraintTop_toBottomOf="@+id/layout_d"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <FrameLayout
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:alpha="0.4"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_gravity="center" />
        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>